<Page x:Class="RayTracerInterface.DND"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RayTracerInterface"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DND">
	<Grid Drop="Grid_Drop" AllowDrop="True">
		<Label Foreground="White" VerticalContentAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="50,0" Height="50">Or alternatively click for file picker: </Label>
		<Label Foreground="White" Content="Drag &amp; Drop Renderer DLL here" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
		<Button Height="50" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Style="{DynamicResource BTStyle}" FontSize="30" Padding="0" FontFamily="Segoe UI Symbol" Click="Button_Click" ></Button>
	</Grid>
</Page>
